<div class="container mt-3">
  <div class="mx-auto col-lg-12">
    <div class="row">
      <div class="col-10 offset-1">
        <h3 class="page-title">ユーザー詳細</h3>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <table class="table table-borderless">
          <tr>
            <th style="width: 40%">ユーザー名</th>
            <td><%= @customer.first_name %></td>
            <td><%= @customer.last_name %></td>
          </tr>
          <tr>
            <th>カナ</th>
            <td><%= @customer.first_name_kana %></td>
            <td><%= @customer.last_name_kana %></td>
          </tr>
            <th>電話番号</th>
            <td> <%= @customer.telephone_number %></td>
          </tr>
          </tr>
            <th>メールアドレス</th>
            <td> <%= @customer.email %></td>
          </tr>
          </tr>
            <th>登録日</th>
            <td> <%= @customer.created_at %></td>
          </tr>
          </tr>
            <th>最終編集日</th>
            <td> <%= @customer.updated_at %></td>
          </tr>
          <tr>
            <th>ステータス</th>
            <td>
              <% if @customer.is_active=="t" %>
              <div class="text-success">登録ユーザー</div>
              <% else %>
              <div class="text-secondary">解約済み</div>
              <% end %>
            </td>
          </tr>
        </table>
        <% if @customer.is_active=="t" %>
          <%= link_to '編集する', edit_customer_path(@customer), class: "btn btn-success" %>
          <%= link_to "退会する", unsubscribe_customer_path(@customer), method: :patch, class: "btn btn-danger col-2 ml-5" %>
        <% end %>
       </div>
    </div>
  </div>

</div>