<%= link_to '商品を確認する', admin_items_path, class: "btn btn-secondary" %>
<%= link_to 'ユーザーを確認する', admin_customers_path, class: "btn btn-secondary" %>
<%= flash[:notice1] %>

  <h1 class ="mt-5">登録ユーザー</h1>
    <table class="table table-hover">
        <tr>
         <th style="width: 20%">名前</th>
         <th>フリガナ</th>
         <th>電話番号</th>
         <th style="width: 20%">メールアドレス</th>
         <th style="width: 40%">住所</th>
         <th>登録日</th>
         <th>更新日</th>
         <th>ステータス</th>
        </tr>
        <% @customers.each do |customer| %>
          <td>
          <%= link_to admin_customer_path(customer.id) do %>
            <%= customer.last_name %> <%= customer.first_name %>
          <% end %>
          </td>
          <td><%= customer.last_name_kana %> <%= customer.first_name_kana %></td>
          <td><%= customer.telephone_number %></td>
          <td><%= customer.email %></td>
          <td><%= customer.postal_code %><br><%= customer.adress %></td>
          <td><%= customer.created_at %></td>
          <td><%= customer.updated_at %></td>
          <% if customer.is_active %>
            <td class="text-success align-middle text-center">登録中</td>
          <% else %>
            <td class="text-secondary align-middle text-center">解約済み</td>
          <% end %>
        <% end %>
    </table>
