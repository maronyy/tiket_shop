<h1>Admin::Items#new</h1>
<p>Find me in app/views/admin/items/new.html.erb</p>

 <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
  <p>タイトル</p>
  <%= f.text_field :name %>

  <p>詳細</p>
  <%= f.text_field :introduction %>
  
  <h4>画像</h4>
  <%= f.file_field :image, accept: "image/*" %>
  
  <p>価格</p>
  <%= f.text_field :price, placeholder: "1,000", size: "30", class: "form-control" %>
    <p class="pl-0 align-bottom">円</p>
  <p>販売ステータス</p>
  <%= f.radio_button :is_active, :true %>
  <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>

  <%= f.radio_button :is_active, :false %>
  <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>

   <div class="my-2">
    <button type="submit" class="btn btn-success">Create Book</button>
   </div>
<% end %>
